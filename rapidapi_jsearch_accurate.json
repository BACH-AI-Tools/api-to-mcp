{
  "openapi": "3.0.0",
  "info": {
    "title": "JSearch",
    "description": "Fast and Reliable Job Searches on All Public Job Sites: LinkedIn, Indeed, Glassdoor, ZipRecruiter in Real-Time from Google for Jobs",
    "version": "2.0.0",
    "contact": {
      "email": "support@openwebninja.com",
      "url": "https://www.openwebninja.com"
    }
  },
  "servers": [
    {
      "url": "https://jsearch.p.rapidapi.com",
      "description": "JSearch API Server (from RapidAPI page data)"
    }
  ],
  "paths": {
    "/search": {
      "get": {
        "summary": "Job Search",
        "description": "Search for jobs posted on any public job site across the web on the largest job aggregate in the world (Google for Jobs). Extensive filtering support and most options available on Google for Jobs.",
        "operationId": "job_search",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "description": "Free-form search query. Can include job title, location, company, keywords (e.g., 'Python developer in New York' or 'marketing manager')",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "Python developer in Texas, USA"
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number for pagination (default: 1)",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1,
              "minimum": 1
            }
          },
          {
            "name": "num_pages",
            "in": "query",
            "description": "Number of pages to return (1-20). Each page returns up to 10 results.",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1,
              "minimum": 1,
              "maximum": 20
            }
          },
          {
            "name": "date_posted",
            "in": "query",
            "description": "Filter by posting date",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["all", "today", "3days", "week", "month"],
              "default": "all"
            }
          },
          {
            "name": "remote_jobs_only",
            "in": "query",
            "description": "Filter for remote jobs only (true/false)",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": false
            }
          },
          {
            "name": "employment_types",
            "in": "query",
            "description": "Filter by employment type (FULLTIME, CONTRACTOR, PARTTIME, INTERN)",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "job_requirements",
            "in": "query",
            "description": "Filter by job requirements (under_3_years_experience, more_than_3_years_experience, no_experience, no_degree)",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with job listings"
          }
        }
      }
    },
    "/job-details": {
      "get": {
        "summary": "Job Details",
        "description": "Get all job details, including additional information such as: application options/links, employer reviews and estimated salaries for similar jobs.",
        "operationId": "job_details",
        "parameters": [
          {
            "name": "job_id",
            "in": "query",
            "description": "Job ID from search results. Required - The unique identifier for the job posting.",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "jGivbN_RF98AAAAAAAAAAA=="
          },
          {
            "name": "extended_publisher_details",
            "in": "query",
            "description": "Include extended publisher details in the response (true/false)",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": false
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with detailed job information including description, requirements, and application links"
          }
        }
      }
    },
    "/estimated-salary": {
      "get": {
        "summary": "Job Salary Estimation",
        "description": "Get estimated salaries/pay for jobs around a location by job title and location. Salary estimation is returned for several periods: hourly, daily, weekly, monthly, or yearly.",
        "operationId": "estimated_salary",
        "parameters": [
          {
            "name": "job_title",
            "in": "query",
            "description": "Job title for salary estimation (e.g., 'Node Developer', 'Software Engineer')",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "Node Developer"
          },
          {
            "name": "location",
            "in": "query",
            "description": "Location for salary search (e.g., 'San Francisco, CA', 'New York, NY')",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "San Francisco, CA, USA"
          },
          {
            "name": "radius",
            "in": "query",
            "description": "Search radius in kilometers (default: 100)",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 100
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with salary estimates for different time periods"
          }
        }
      }
    },
    "/company-job-salary": {
      "get": {
        "summary": "Company-Specific Job Salary",
        "description": "Get estimated job salaries/pay in a specific company by job title and optionally a location and experience level in years.",
        "operationId": "company_job_salary",
        "parameters": [
          {
            "name": "job_title",
            "in": "query",
            "description": "Job title (e.g., 'Software Engineer', 'Product Manager')",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "Software Engineer"
          },
          {
            "name": "company_name",
            "in": "query",
            "description": "Company name (e.g., 'Google', 'Microsoft')",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "Google"
          },
          {
            "name": "location",
            "in": "query",
            "description": "Location (optional, e.g., 'San Francisco, CA')",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with company-specific salary data"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "RapidAPIKey": {
        "type": "apiKey",
        "in": "header",
        "name": "X-RapidAPI-Key",
        "description": "Your RapidAPI Key for authentication"
      },
      "RapidAPIHost": {
        "type": "apiKey",
        "in": "header",
        "name": "X-RapidAPI-Host",
        "description": "Must be set to: jsearch.p.rapidapi.com"
      }
    }
  },
  "security": [
    {
      "RapidAPIKey": []
    },
    {
      "RapidAPIHost": []
    }
  ]
}

